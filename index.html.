  <script>
    const courseData = {
      education: {
        programs: [
          "Bachelor of Elementary Education (BEEd)",
          "Bachelor of Secondary Education (BSEd) - English",
          "Bachelor of Secondary Education (BSEd) - Filipino",
          "Bachelor of Secondary Education (BSEd) - Mathematics",
          "Bachelor of Secondary Education (BSEd) - Social Studies"
        ]
      },
      hospitality: {
        programs: [
          "Bachelor of Science in Hospitality Management (BSHM)",
          "Bachelor of Science in Tourism Management (BSTM)"
        ]
      },
      technology: {
        programs: [
          "Bachelor of Industrial Technology (BIndTech) - Computer Technology",
          "Bachelor of Industrial Technology (BIndTech) - Electronics Technology"
        ]
      }
    };

    function updateCourseInfo() {
      const college = document.getElementById("college").value;
      const details = document.getElementById("courseDetails");
      const programSelect = document.getElementById("program");

      programSelect.innerHTML = '<option value="">-- Select Program --</option>';
      
      if (college && courseData[college]) {
        const info = courseData[college];
        details.style.display = "block";
        details.innerHTML = `
          <p><strong>Programs Offered:</strong></p>
          <ul>${info.programs.map(p => `<li>${p}</li>`).join("")}</ul>
        `;
        info.programs.forEach(program => {
          const opt = document.createElement("option");
          opt.value = program;
          opt.textContent = program;
          programSelect.appendChild(opt);
        });
      } else {
        details.style.display = "none";
      }
    }

    document.getElementById("registrationForm").addEventListener("submit", function(e) {
      e.preventDefault();
      alert("ðŸŽ‰ Registration submitted successfully!");
    });
  </script>
